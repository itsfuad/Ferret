// Test type promotion in arithmetic operations

import "std/io";

fn main() {
    io::Println("=== Type Promotion Tests ===");
    
    // Test 1: i32 + i256 → should use i256
    let a: i32 = 100;
    let big_lit: i256 = 340282366920938463463374607431768211456;  // 2^128
    let result1 := a + big_lit;
    io::Print("1. i32 + i256: ");
    io::Println(result1);
    
    // Test 2: i64 + i128 → should use i128
    let b: i64 = 9223372036854775807;  // max i64
    let c: i128 = 170141183460469231731687303715884105727;  // max i128
    let result2 := b + c;
    io::Print("2. i64 + i128: ");
    io::Println(result2);
    
    // Test 3: f32 + f64 → should use f64
    let d: f32 = 3.14;
    let e: f64 = 2.718281828;
    let result3 := d + e;
    io::Println("3. f32 + f64: ", result3);
    
    // Test 4: i32 + f64 → should use f64
    let f: i32 = 42;
    let g: f64 = 3.14159;
    let result4 := f + g;
    io::Println("4. i32 + f64: ", result4);
    
    // Test 5: subtraction with promotion
    let h: i32 = 1000;
    let i: i256 = 340282366920938463463374607431768211456;
    let result5 := i - h;  // i256 - i32 → i256
    io::Print("5. i256 - i32: ");
    io::Println(result5);
    
    // Test 6: multiplication with promotion
    let j: i64 = 1000000;
    let k: i256 = 340282366920938463463374607431768211456;
    let result6 := j * k;  // i64 * i256 → i256
    io::Print("6. i64 * i256: ");
    io::Println(result6);
    
    // Test 7: division with promotion
    let l: i32 = 2;
    let m: i256 = 340282366920938463463374607431768211456;
    let result7 := m / l;  // i256 / i32 → i256
    io::Print("7. i256 / i32: ");
    io::Println(result7);
    
    io::Println("\nAll type promotion tests passed!");
}
