// Test declaration validation

fn test() {
    // Multiple declarations with mixed types/values
    let a: i32, b, c := 12;
    // a: OK (has type)
    // b: ERROR (no type, no value) - semantic error
    // c: OK (has value, type inferred)
    
    // Single declaration without type or value
    let x;  // ERROR - semantic error
    
    // Valid cases
    let y: i32;     // OK
    let z := 42;    // OK
}
