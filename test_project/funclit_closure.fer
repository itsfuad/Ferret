// Test function literals - closure capability

fn main() {
    let outer := 42;
    let x := 10;
    
    // Function literal should be able to access variables from parent scope (closure)
    let capturer := fn() -> i32 {
        // Both 'outer' and 'x' should be accessible from parent scope
        return outer + x;
    };

    // Test with parameters and closure
    let adder := fn(a: i32) -> i32 {
        // 'a' is parameter, 'outer' is from parent scope
        return a + outer;
    };
}
