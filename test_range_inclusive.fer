// Test inclusive range operator ..=

fn test_exclusive_range() {
    // Exclusive range: 0..5 -> [0, 1, 2, 3, 4]
    let arr1 := 0..5;
    
    // Should have 5 elements (0 to 4)
}

fn test_inclusive_range() {
    // Inclusive range: 0..=5 -> [0, 1, 2, 3, 4, 5]
    let arr2 := 0..=5;
    
    // Should have 6 elements (0 to 5)
}

fn test_both_in_for_loop() {
    // Exclusive: iterates 0 to 4
    for let i in 0..5 {
        let x := i;
    }
    
    // Inclusive: iterates 0 to 5
    for let j in 0..=5 {
        let y := j;
    }
}

fn test_with_increment() {
    // Exclusive with increment: 0..10:2 -> [0, 2, 4, 6, 8]
    let arr3 := 0..10:2;
    
    // Inclusive with increment: 0..=10:2 -> [0, 2, 4, 6, 8, 10]
    let arr4 := 0..=10:2;
}
