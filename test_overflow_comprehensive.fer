let b1: i8 = -128;   // OK - fits in i8
let b2: i8 = -129;   // need at least i16
let b3: i16 = -32768; // OK - fits in i16
let b4: i16 = -32769; // need at least i32

// Edge cases
let c1: i16 = 32767;  // OK - fits in i16
let c2: i16 = 32768;  // need at least i16 or u16
let c3: u16 = 65535;  // OK - fits in u16
let c4: u16 = 65536;  // need at least u16 or i32

// Large values
let d1: i32 = 2147483647;  // OK - fits in i32
let d2: i32 = 2147483648;  // need at least i32 or u32
