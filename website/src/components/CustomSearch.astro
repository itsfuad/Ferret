---
import Search from "@astrojs/starlight/components/Search.astro";
---

<div class="search-wrapper">
    <Search {...Astro.props} />
</div>

<style>
    .search-wrapper {
        display: flex;
        align-items: center;
        width: 100%;
    }

    /* Style Starlight's search to match our navbar */
    .search-wrapper :global(site-search) {
        display: flex;
        justify-content: flex-end;
        align-items: center;
        width: 100%;
        line-height: 1;
    }

    /* Override Starlight's button[data-open-modal] (it sets height: 2.5rem and font-size: xl). */
    .search-wrapper :global(button[data-open-modal]) {
        display: inline-flex;
        align-items: center;
        padding: 0.5rem 0.875rem;
        border-radius: 0.5rem;
        font-size: 0.875rem;
        line-height: 1;
        background: var(--background);
        color: var(--muted-foreground);
        transition: all 0.15s ease;
        white-space: nowrap;
        border: 1px solid var(--border);
        height: auto;
    }

    .search-wrapper :global(button[data-open-modal]:hover) {
        background: var(--muted);
        color: var(--foreground);
        border-color: transparent;
    }

    .search-wrapper :global(button[data-open-modal]:focus-visible) {
        border-color: transparent;
    }

    /* Prevent search modal from being hidden */
    :global(dialog[open]) {
        display: flex !important;
    }
</style>
