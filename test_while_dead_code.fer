fn main() {
    // Test 1: While with constant false - should warn
    while false {
        let x := 1;
    }

    // Test 2: While with constant true - intentional infinite loop, should not warn
    while true {
        let y := 2;
        // In real code would have break somewhere
    }

    // Test 3: While with constant expression
    const FLAG := false;
    while FLAG {
        let z := 3;
    }

    // Test 4: While with arithmetic comparison (always false)
    while 1 > 2 {
        let a := 4;
    }

    // Test 5: While with non-constant condition (should not warn)
    let x := 10;
    while x > 0 {
        let b := 5;
    }
}
