import "std/io";

type Indexable union {
    str,
    []interface{},
    map[interface{}]interface{}
};

fn loop(iter: Indexable) {
    if iter is []interface {
        for v in iter {
            io::Println(v);
        }
    } else {
        io::Println("loop not executed");
    }
}

fn main() {
    //let u: union { i32, str } = 42;
    let idx: Indexable = "hi";
    let ii: interface{} = 42;
    let arr: []interface{} = [1,2,4];

    let string := "hello world";
    for c in string {
        io::Println(c);
    }
    
    io::Println("-----------");
    
    loop(arr);
}