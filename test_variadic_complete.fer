import "std/io";

fn sum(nums: ...i32) -> i32 {
    let total: i32 = 0;
    let i: i32 = 0;
    while i < len(nums) {
        total = total + nums[i];
        i = i + 1;
    }
    return total;
}

fn main() {
    // Test user-defined variadic
    let result: i32 = sum(1, 2, 3, 4, 5);
    io::Println("Sum:", result);
    
    // Test empty variadic
    let empty: i32 = sum();
    io::Println("Empty sum:", empty);
    
    // Test Print/Println with multiple args
    io::Println("Multiple", "args", "work", "correctly");
    io::Print("Numbers:", 42, 99, 123);
    
    return;
}
