import "std/io";

fn main() {
    // This should fail at compile time with dynamic array literal
    // Note: Direct indexing of literals isn't supported in MIR yet,
    // but the bounds check happens in HIR analysis before MIR lowering
    let arr := [1, 2, 3];
    let idx := 10;
    // This will be caught at runtime (variable access)
    io::Println(arr[idx]);
}

