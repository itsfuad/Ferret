import "std/io";

fn main() {
    let i := 10;
    // Test fixed array - valid accesses
    let fixed: [3]i32 = [10, 20, 30];
    io::Println(fixed[0]);  // Should work: 10
    io::Println(fixed[2]);  // Should work: 30
    
    // Test dynamic array - valid accesses
    let dynamic := [100, 200];
    io::Println(dynamic[0]);  // Should work: 100
    io::Println(dynamic[1]);  // Should work: 200
    // io::Println(dynamic[10]);  // Compile-time error: index out of bounds
    // io::Println(dynamic[i]);   // Compile-time error: index out of bounds (i = 10)
    
    // Note: Compile-time bounds checking for dynamic arrays works when:
    // 1. The array is a literal (direct access - but MIR lowering doesn't support this yet)
    // 2. The index is a compile-time constant
    // For variables assigned from literals, runtime bounds checking will catch errors
}

