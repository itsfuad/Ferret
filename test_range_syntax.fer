// Test range expressions without brackets - comprehensive test

// Range as variable initialization
let range1 := 0..5;
let range2 := 10..20:2;
let range3 := 5..1;  // Reverse range

fn test() {
    // Direct range in for loop
    for let i in 0..10 {
        let x := i;
    }
    
    // Variable containing range in for loop  
    for let i in range1 {
        let y := i;
    }
    
    // Range with step
    for let i in 0..10:2 {
        let z := i;
    }
}
