fn getCondition() -> bool {
    return true;
}

fn main() {
    // Test 1: Constant true condition
    if true {
        let x := 1;
    } else {
        let y := 2;  // Dead code
    }

    // Test 2: Constant false condition
    if false {
        let a := 3;  // Dead code
    } else {
        let b := 4;
    }

    // Test 3: Constant expression (should be detected)
    const FLAG := true;
    if FLAG {
        let c := 5;
    } else {
        let d := 6;  // Dead code
    }

    // Test 4: Non-constant condition from function (should not warn)
    if getCondition() {
        let e := 7;
    } else {
        let f := 8;
    }

    // Test 5: Arithmetic constant condition
    if 1 + 1 == 2 {
        let g := 9;
    } else {
        let h := 10;  // Dead code
    }
}
