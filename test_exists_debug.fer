import "std/io";
import "std/fs";

fn main() {
    io::Println("Testing Exists:");
    
    // Test with a file that definitely doesn't exist
    let result := fs::Exists("this_file_does_not_exist_xyz_123.fer");
    io::Println("Result for non-existent: ");
    if result {
        io::Println("  TRUE");
    } else {
        io::Println("  FALSE");
    }
    
    // Test with a file that definitely exists (this source file)
    let result2 := fs::Exists("test_exists_debug.fer");
    io::Println("Result for existing: ");
    if result2 {
        io::Println("  TRUE");
    } else {
        io::Println("  FALSE");
    }
}
